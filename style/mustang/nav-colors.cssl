& {
    border-color: -param-1;
    background: -param-2;
}

& input[type=submit], 
& input[type=text], 
& button,
& form label,
& a,
& a:hover, 
& label:hover {
    color: -param-0;
}

& button,
& input[type=text],
& input[type=submit] {
    color: -param-0;
}

& input[type=submit]:focus,
& button:focus {
    border-color: -param-0;
}

& input[type=text]:focus {
    border-color: -param-0;
}

& a:hover, 
& label:hover {
    background-color: -param-1;
}


